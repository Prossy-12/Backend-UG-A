doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title UG Anfield - News
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css' rel='stylesheet')
    link(rel='stylesheet' href='/css/news.css')
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.py-2
      .container
        a.navbar-brand(href='/') UG Anfield
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href='/news') News & Updates
    section.py-5
      .container
        h1.text-center.mb-5 Latest News and Updates
        .row
          each article in articles
            .col-md-4
              .card.mb-4
                img.card-img-top(src=article.image || 'placeholder.jpg' alt=article.title)
                .card-body
                  h5.card-title= article.title
                  p.card-text= article.description
                  a.btn.btn-danger(href=article.link target='_blank') Read More
    footer.bg-dark.text-white.text-center.p-3
      .container
        p Contact: info@uganfield.com
        p &copy; 2024 Ug Anfield. All rights reserved.
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js')
