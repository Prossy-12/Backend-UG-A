doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title UG Anfield - Contact Us
    // Bootstrap CSS
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css' rel='stylesheet')
    // Font Awesome for icons
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css')
    // Custom styles
    link(rel='stylesheet' href='/css/contact.css')
  

  body
    // Scroll to Top Button
    button#scrollToTopBtn(
      onclick='scrollToTop()' 
    
    ) &uarr; Top

    // Navbar
    header
      nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
        .container.d-flex.align-items-center
          // Logo positioned before the text
          a.navbar-brand.d-flex.align-items-l(href='index.html')
            img.logo.me-2(
              src='images/logo.jpeg' 
              alt='UG Anfield Logo' 
            )
          a.navbar-brand(href='/') UG Anfield
          button.navbar-toggler(
            type='button' 
            data-bs-toggle='collapse' 
            data-bs-target='#navbarNav' 
            aria-controls='navbarNav' 
            aria-expanded='false' 
            aria-label='Toggle navigation'
          )
            span.navbar-toggler-icon
          // Navbar links
          #navbarNav.collapse.navbar-collapse
            ul.navbar-nav.ms-auto
              li.nav-item
                a.nav-link(href='/about') About Us
              li.nav-item
                a.nav-link(href='/membership') Membership
              li.nav-item
                a.nav-link(href='/news') News &amp; Updates
              li.nav-item
                a.nav-link(href='/media') Media
              li.nav-item
                a.nav-link(href='/events') Events
              li.nav-item
                a.nav-link(href='/partnership') Partnership
              li.nav-item
                a.nav-link.active(href='/contact') Contact
              li.nav-item
                a.nav-link(href='/matches') Matches

    // Contact Section
    section.py-5
      .container
        h1.text-center.mb-5.contact-heading Get in Touch with UG Anfield
        p.text-center.mb-5 We'd love to hear from you! Fill out the form below and we'll get back to you as soon as possible.
        
        .row
          // Contact Form
          .col-lg-7.mb-4
            .form-container
              form#contactForm(action='/submit-contact' method='POST')
                .mb-3
                  label.form-label(for='recipient') Select Department
                  select#recipient.form-control(name='recipient' required='')
                    option(value='') -- Select Department --
                    option(value='support@uganfield.com') Support Team
                    option(value='membership@uganfield.com') Membership Inquiries
                    option(value='events@uganfield.com') Events Coordination
                    option(value='media@uganfield.com') Media Relations
                    option(value='admin@uganfield.com') Administration
                
                .row
                  .col-md-6.mb-3
                    label.form-label(for='name') Full Name
                    input#name.form-control(type='text' name='name' required='')
                  
                  .col-md-6.mb-3
                    label.form-label(for='email') Email Address
                    input#email.form-control(type='email' name='email' required='')
                
                .row
                  .col-md-6.mb-3
                    label.form-label(for='phone') Phone Number (Optional)
                    input#phone.form-control(type='tel' name='phone' placeholder='For faster responses')
                  
                  .col-md-6.mb-3
                    label.form-label(for='preferredContact') Preferred Contact Method
                    select#preferredContact.form-control(name='preferredContact')
                      option(value='email') Email
                      option(value='phone') Phone Call
                      option(value='whatsapp') WhatsApp
                
                .mb-3
                  label.form-label(for='subject') Subject
                  input#subject.form-control(type='text' name='subject' required='')
                
                .mb-3
                  label.form-label(for='message') Message
                  textarea#message.form-control(name='message' rows='5' required='')
                
                .row
                  .col-md-6.mb-3
                    label.form-label(for='date') Preferred Response Date
                    input#date.form-control(type='date' name='date')
                  
                  .col-md-6.mb-3
                    label.form-label(for='urgency') Urgency Level
                    select#urgency.form-control(name='urgency')
                      option(value='normal') Normal
                      option(value='high') High Priority
                      option(value='urgent') Urgent
                
                .form-check.mb-3
                  input#newsletter.form-check-input(type='checkbox' name='newsletter')
                  label.form-check-label(for='newsletter') Subscribe to our newsletter
                
                .d-grid.gap-2
                  button.btn.btn-send(type='submit')
                    i.fas.fa-paper-plane.me-2
                    | Send Message
                
                #formStatus.mt-3
          
          // Contact Information
          .col-lg-5
            .contact-info-card.mb-4
              h4
                i.fas.fa-map-marker-alt.contact-icon
                | Our Location
              p.mb-0 UG Anfield Club House
              p 123 Football Lane, Kampala, Uganda
            
            .contact-info-card.mb-4
              h4
                i.fas.fa-envelope.contact-icon
                | Email Us
              p.mb-0
                a(href='Uganfield0@gmail.com') info@uganfield.com
            
            .contact-info-card.mb-4
              h4
                i.fas.fa-phone.contact-icon
                | Call Us
              p.mb-0
                a(href='tel:+256 763 468797,+256 750 074374') +256 763 468797,+256 750 074374
            
            
    // Footer
    footer.bg-dark.text-white.text-center.p-4
      .container
        .row
          .col-md-6.text-md-start.mb-3.mb-md-0
            h5 Connect with UG Anfield
            p
              | Email: 
              a.text-white(href='mailto:info@uganfield.com') info@uganfield.com
              br
              | Phone: +256 763 468797,+256 750 074374
          
          .col-md-6.text-md-end
            h5 Follow Us
            .social-links
              a.text-white.me-3(href='https://tiktok.com/@ug.anfield.official')
                i.fab.fa-tiktok
              a.text-white.me-3(href='https://chat.whatsapp.com/IwDs17g4SsQ7MjDrHupncl')
                i.fab.fa-whatsapp
              a.text-white.me-3(href='https://www.instagram.com/uganfield?igsh=ZGUzMzM3NWJiOQ==')
                i.fab.fa-instagram
              a.text-white.me-3(href='https://www.facebook.com/profile.php?id=61566677184223')
                i.fab.fa-facebook
              a.text-white.me-3(href='https://youtube.com/@uganfield9483?si=ypdnMDpstRGo0Ba3')
                i.fab.fa-youtube
        
        hr.my-3
        
        p.mb-0 &copy; 2024 UG Anfield. All rights reserved.

    // Bootstrap JS
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js')
    // Custom JS
    script(src='/js/contact.js')